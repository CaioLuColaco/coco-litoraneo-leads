FROM node:22-alpine

WORKDIR /app

# Instalar dependências do sistema
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    git

# Copiar package.json e package-lock.json
COPY package*.json ./

# Instalar dependências
RUN npm ci

# Copiar código fonte
COPY . .

# Expor porta
EXPOSE 3001

# Tornar o script executável
COPY start.sh /app/start.sh
RUN chmod +x /app/start.sh

# Comando padrão
CMD ["/app/start.sh"]
